@model IList<LiveChat.Domain.ViewModels.ChatUserViewModel>

@{
    ViewBag.Title = "Private chat";
}

<h2>Private chat</h2>

<div class="col-lg-5">
    @Html.ValidationSummary()
    <ul class="list-group">
        @foreach (var user in @Model)
        {
            <a id="@user.UserId-user-list-element" href="@Url.Action("PrivateChat", new { userId = user.UserId })" class="list-group-item user-list-group-item">
                @user.Name
                @if (user.IsConnected)
                {
                    <span class="badge" style="background-color: #3cbd3d"><span class="glyphicon glyphicon-user"></span></span>
                }
                else
                {
                    <span class="badge" style="display:none; background-color: #3cbd3d"><span class="glyphicon glyphicon-user"></span></span>
                }
            </a>
        }
    </ul>
</div>
