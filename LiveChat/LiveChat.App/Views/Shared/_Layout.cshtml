<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - LiveChat</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="@Url.Action("Shoutbox", "Chat")"><strong>LiveChat</strong> <span class='glyphicon glyphicon-bullhorn'></span></a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu" class="nav nav-tabs" role="tablist">
                            <li>@Html.ActionLink("Shoutbox", "Shoutbox", "Chat")</li>
                            <li>@Html.ActionLink("Live Chat", "UsersListChat", "Chat")</li>
                            @if (Roles.IsUserInRole("Administrator"))
                            {
                                <li>@Html.ActionLink("ManageAccounts", "ManageAccounts", "Account")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <div id="information-panel" class="alert alert-info"></div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - <strong>LiveChat</strong> <span class="glyphicon glyphicon-bullhorn"></span></p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
        <script src="~/signalr/hubs"></script>
        @Scripts.Render("~/bundles/livechat")
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/livechat")
        @RenderSection("scripts", required: false)
    </body>
</html>
